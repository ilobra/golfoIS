{% extends "::vipmenu.html.twig" %}

{% block title %}Geriausi Žaidėjai{% endblock %}

{% block body %}

{% block content %}
    <center>
        <div style="width:50%">
            <h3 class="divTitle">Geriausi žaidėjai</h2><br>

        
            {% if kiekis != 0 %}
            <table class="table table-striped" style="width:500px">
            <thead>
            <th style="width:50px">Vieta</th>
            <th>Vardas</th>
            <th>Pavardė</th>
            <th>Ratio</th>
            </thead>

            {% set count = 1 * page %}
            {% for rezultatas in rezultatai %}
            <thead>
            <td> {{ count }}</td>
            <td> {{ rezultatas.vardas }}</td>
            <td> {{ rezultatas.pavarde }}</td>
            <td> {{ rezultatas.ratio }}</td>
            </thead>

            {% set count = count + 1 %}
            {% endfor %}
        </table>

        <div class="navigation">
            {{ knp_pagination_render(rezultatai) }}
        </div>

        {% else %}
                <h3> Kol kas rezultatų dar neregistravote.</h3>
        {% endif %}
    </div>
</center>
{% endblock %}
{% endblock %}
