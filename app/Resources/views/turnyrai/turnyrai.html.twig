{% extends "::adminmenu.html.twig" %}

{% block title %}Turnyrai{% endblock %}

{% block body %}

    {% block content %}
        <center>
            <div style="width:50%">

                <center><h3 class="divTitle">TURNYRAI</h3></center>

                <center> <form method="get" action="">
                        <p>Pasirinkite intervalą:</p>
                        <label for="from">Nuo:</label>
                        <input type="date" id="from" name="from">

                        <label for="to">Iki:</label>
                        <input type="date" id="to" name="to">
                        </br>
                        <input type="submit" class="btn btn-info" value="Ieškoti turnyrų" />

                    </form>

                </center>
                {% if turnyrai|length!=0 %}
                <table class="table table-striped">
                    <thead>
                    <th>ID</th>
                    <th>DATA</th>
                    <th>LAIKAS</th>
                    <th>PAVADINIMAS</th>
                    <th>AIKŠTYNO INFORMACIJA</th>
                    <th>DALYVAUJANČIŲ ŽAIDĖJŲ KIEKIS</th>
                    </thead>
                    {% for turnyras in turnyrai %}

                        <thead>
                        <td> {{ turnyras.id }}</td>

                        <td> {{ turnyras.data|date('Y-m-d') }}</td>
                        <td> {{ turnyras.pradziosLaikas|date('H:i:s') }} - {{ turnyras.pabaigosLaikas|date('H:i:s') }}</td>
                        <td> {{ turnyras.pavadinimas }}</td>
                        <td> {{ turnyras.aikstynoInfo }}</td>
                        <td> {{ turnyras.dalyvauja }}</td>
                    {% endfor %}

                        </thead>
                </table>
                {% endif %}
            </div>
        </center>

        <center>
            <br> <input  type="button" value="Peržiūrėti turnyrų dalyvius"  class="btn btn-info" onclick="window.location.href='/admin/tournaments/participants'"></center>

