{% extends "::personnelmenu.html.twig" %}

{% block body %}
    <center>
            <h3 class="divTitle">IRANGA</h3><br>

        <div style="width:50%">
            <table id="PagalData" class="table table-striped">
            <table class="table table-striped">
            <thead>
            <th>TIPAS</th>
            <th>KOKYBĖ</th>
            <th>IŠNUOMAVIMO DATA</th>
            </thead>
                {% for ir in iranga %}
                <thead>
                <td> {{ ir.tipas }} </td>
                <td> {{ ir.kokybe }} </td>
                <td> {{ ir.isigijimoData|date('Y-m-d') }}</td>
                <td><a  href={{ path('iranga_show', {'id': ir.id}) }} >Peržiūrėti</a></td>
                <td><a  href={{ path('iranga_edit', {'id': ir.id}) }} >Redaguoti</a></td>
                <td><a  href={{ path('iranga_delete', {'id': ir.id}) }} onclick="return confirm('Ar tikrai norite pašalinti šį įrašą, bus sunaikinti ir visi apmokėjimai?')">Šalinti</a></td>
                </thead>
                {% endfor %}
        </table>
    </div><br>
        <h3 class="divTitle">Pridėti naują įrašą</h3><br>
        <a class="btn btn-info btn-block" style="width: 50%;" href={{ path('iranga_add') }} >Pridėti</a>
</center>
{% endblock %}