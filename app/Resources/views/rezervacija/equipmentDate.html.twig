{% extends "::usermenu.html.twig" %}

{% block title %}Įranga{% endblock %}

{% block body %}
{% block content %}

    <center>
        <div style="width:50%">

            <h3 class="divTitle">JŪSŲ PASIRINKTA ĮRANGA</h3><br><br>
                <table class="table table-striped">
                    <thead>
                    <th>TIPAS</th>
                    <th>KOKYBĖ</th>
                    <th>ĮSIGIJIMO DATA</th>
                    <th>KAINA PARAI</th>
                    <th>NUOMOS TERMINAS</th>
                    </thead>

                     {% for ir in iranga %}
                    <thead>
                    <td> {{ ir.tipas }}</td>
                    <td> {{ ir.kokybe }}</td>
                    <td> {{ ir.isigijimoData|date('Y-m-d') }}</td>
                    <td> {{ kaina }} €</td>
                    <form method="post" action="{{ path('equipment_confirm', {'irangosid': ir.id, 'id':ir.tipas, 'kaina':kaina}) }}">
                    <td> 
                            <select name="days" id="days">
                                <option value="1">1 diena</option>
                                <option value="2">2 dienos</option>
                                <option value="3">3 dienos</option>
                                <option value="7">7 dienos</option>
                                <option value="14">14 dienų</option>
                            </select>     
                    </td>
                    </thead>
                {% endfor %}
            </table>
            <input type="submit" class="btn btn-info" value="Patvirtinti" /><br>
        </form>
        </div>
    </center><br>
    <center><input type="button" value="Grįžti atgal"  class="btn btn-danger" onclick="history.back()"></center>

{% endblock %}
<style>
select {
    height: 30px;
    color: #2F4F4F;
    border-radius: 3px; /* suapvalinimas */
    border: 1px solid black;
}
</style>
{% endblock %}